red-aux-lex := subj-raise-aux-no-pred & aspect-marker-prefixes-rule-dtr &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CAT.HEAD.FORM form,
    INFLECTED [ MAN-AUX-OR-RED-AUX-OR-YIN-AUX-FLAG +,
                1DUG-AUX-OR-MAN-AUX-OR-RED-AUX-OR-YIN-AUX-FLAG + ] ].

; To keep the semantically empty ones from spinning on
