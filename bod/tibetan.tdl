myong-aux-lex := subj-raise-aux-with-pred &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CAT.HEAD.FORM form ].

;;; Copulas

cop-lex := basic-verb-lex-super & trans-first-arg-raising-lex-item-2 &
  [ SYNSEM.LOCAL [ CAT.VAL [ SUBJ < [ LOCAL [ CONT.HOOK.INDEX #xarg,
                                              CAT cat-sat &
                                                  [ VAL [ SPR < >,
                                                          COMPS < > ],
                                                    HEAD noun ] ] ] >,
                             COMPS < [ LOCAL.CAT cat-sat &
                                                 [ HEAD.PRD +,
                                                   VAL [ SUBJ < >,
                                                         COMPS < > ] ] ] >,
                             SPR < >,
                             SPEC < > ],
                   CONT.HOOK.XARG #xarg ] ].

; Copula type taking adjectival complements.
; Need to define more for additional complement types.

adj-comp-copula-verb-lex := cop-lex &
  [ SYNSEM.LOCAL.CAT.VAL.COMPS.FIRST.LOCAL.CAT.HEAD adj ].

copula-verb-lex-cop-lex := adj-comp-copula-verb-lex &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX.E.TENSE present ].

interr-copula-verb-lex-cop-lex := copula-verb-lex-cop-lex &
  [ SYNSEM.LOCAL.CONT.HOOK.INDEX [ E.MOOD interr,
                                   SF ques ] ].

;;; Adjectives

adj-lex := basic-intersective-adjective-lex.

nom-adj-verb-lex-adj-lex := attr-adj-lex &
  [ SYNSEM.LOCAL.CAT [ POSTHEAD +,
                       VAL.SUBJ < >,
                       HEAD.PRD + ] ].

; Basic attributive adjective definition

attr-adj-lex := adj-lex & intersective-mod-lex &
  [ SYNSEM.LOCAL.CAT.HEAD.MOD < [ LOCAL.CAT [ HEAD noun,
                                              VAL.SPR cons ] ] > ].

;;;;;;;;;;;;;;;;;;;
;;; Subordinators
;;;;;;;;;;;;;;;;;;;

adverb-subord-lex-item := no-rels-hcons-lex-item &
  [ SYNSEM.LOCAL.CAT [ VAL [ SUBJ < >,
                             SPR < >,
                             COMPS < > ],
                       HEAD.MOD < [ SUBORDINATED none,
                                    LOCAL intersective-mod &
                                          [ CAT [ MC -,
                                                  HEAD verb ] ] ] > ] ].

prehead-after-clause-final-adv-subord-lex-item := adverb-subord-lex-item &
  [ SYNSEM [ SUBORDINATED after,
             LOCAL.CAT [ HEAD.MOD < [ LOCAL.CAT.VAL [ SUBJ < >,
                                                      COMPS < > ] ] >,
                         POSTHEAD + ] ] ].

prehead-inorderto-clause-final-adv-subord-lex-item := adverb-subord-lex-item &
  [ SYNSEM [ LOCAL.CAT.HEAD.MOD < [ LOCAL.CAT.VAL [ SUBJ < >,
                                                    COMPS < > ] ] >,
             SUBORDINATED inorderto ] ].

prehead-while-clause-final-adv-subord-lex-item := adverb-subord-lex-item &
  [ SYNSEM [ LOCAL.CAT.HEAD.MOD < [ LOCAL.CAT.VAL [ SUBJ < >,
                                                    COMPS < > ] ] >,
             SUBORDINATED while ] ].

prehead-if-clause-final-adv-subord-lex-item := adverb-subord-lex-item &
  [ SYNSEM [ LOCAL.CAT.HEAD.MOD < [ LOCAL.CAT.VAL [ SUBJ < >,
                                                    COMPS < > ] ] >,
             SUBORDINATED if ] ].

prehead-unless-clause-final-adv-subord-lex-item := adverb-subord-lex-item &
  [ SYNSEM [ LOCAL.CAT.HEAD.MOD < [ LOCAL.CAT.VAL [ SUBJ < >,
