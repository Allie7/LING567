1dug-aux-lex := subj-raise-aux-no-pred &
  [ SYNSEM.LOCAL [ CONT.HOOK.INDEX.E.ASPECT prf,
                   CAT.VAL.COMPS.FIRST.LOCAL.CAT.HEAD.FORM form ],
    INFLECTED [ 1DUG-AUX-OR-MED-AUX-OR-YOD-AUX-OR-YOGMARED-AUX-OR-YOGRED-AUX-FLAG +,
                1DUG-AUX-OR-MAN-AUX-OR-RED-AUX-OR-YIN-AUX-FLAG + ] ].

; To keep the semantically empty ones from spinning on
